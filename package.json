{
  "name": "cyberstition-app",
  "license": "UNLICENSED",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:web": "vite --mode web",
    "dev:app": "cross-env BUILD_TARGET=app vite",
    "build": "tsc -b && vite build",
    "build:web": "tsc -b && cross-env BUILD_TARGET=web vite build",
    "build:app": "tsc -b && cross-env BUILD_TARGET=app vite build",
    "preview": "vite preview",
    "preview:web": "vite preview --outDir dist/web",
    "preview:app": "vite preview --outDir dist/app",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ --ext .ts,.tsx",
    "format": "prettier --write src/",
    "android:init": "npx cap add android",
    "android:sync": "npm run build:app && npx cap sync android",
    "android:open": "npx cap open android",
    "android:run": "npm run android:sync && npx cap run android",
    "android:build": "npm run build:app && npx cap sync android",
    "ios:init": "npx cap add ios",
    "ios:sync": "npm run build:app && npx cap sync ios",
    "ios:open": "npx cap open ios",
    "ios:run": "npm run ios:sync && npx cap run ios",
    "ios:build": "npm run build:app && npx cap sync ios",
    "icons:generate": "npx @capacitor/assets generate --iconBackgroundColor '#0a0f1a' --iconBackgroundColorDark '#0a0f1a' --splashBackgroundColor '#0a0f1a' --splashBackgroundColorDark '#0a0f1a' --logoSplashScale 0.35",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/splash-screen": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0",
    "jspdf": "^4.1.0",
    "lucide-react": "^0.542.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^8.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jspdf": "^1.3.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^4.0.18",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^28.1.0",
    "patch-package": "^8.0.1",
    "prettier": "^3.8.1",
    "typescript": "^5.5.4",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  }
}
